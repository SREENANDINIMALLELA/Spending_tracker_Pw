
<% transTotal = TransactionDto.total_amount%>
<p> Remaining Balance : <%=  p @customer.wallet - transTotal %></p>

<table>
  <tr>
    <th>Category</th>
    <th>Merchant</th>
    <th>Amount</th>
    <th>Transaction added date </th>
  </tr>
  <%@transactions.each do |transaction|%>
  <tr>
    <td><%=transaction.category_name %></td>
      <td> <%= transaction.merchant_name %></td>
      <td><%= transaction.amount %></td>
      <td><%= transaction.date_time %></td>
  </tr>
  <% end %>
  <tfoot>
    <tr>
      <th id="total" colspan="2">Total :</th>
      <td><%= transTotal  %></td>
    </tr>
   </tfoot>

</table>
