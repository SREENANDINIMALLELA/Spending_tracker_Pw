<p> Your Balance : <%= @customer.wallet - @total_amount %></p>
<p> Remainig preference budget : <%= @customer.budget - @total_amount  %></p>


<table>
  <tr>
    <th>Transaction date </th>
    <th>Merchant</th>

    <th>Amount</th>
  </tr>
  <%@transactions.each do |transaction|%>
  <tr>
      <td><%= transaction.date_time %></td>
      <td> <%= transaction.merchant_name %></td>
      <td><%= transaction.amount %></td>
      <td><a href="/spending_tracker/merchant/<%= transaction.merchant_name%>">details</a></td>
  </tr>
  <% end %>
  <tfoot>
    <tr>
      <th id="total" colspan="2">Total :</th>
      <td><%= @total_amount %></td>
    </tr>
   </tfoot>

</table>
